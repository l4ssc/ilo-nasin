{
  "compilerOptions": {
    "pretty": true,
    
    "target": "ES2022",
    "incremental": true,
    "outDir": "./dist",
    "importHelpers": true,
    "noEmitHelpers": true,
    "declaration": false,
    "sourceMap": false,

    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "nodenext",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}